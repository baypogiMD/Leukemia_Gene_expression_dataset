import pandas as pd
import sqlite3

# Load datasets
train = pd.read_csv("data/raw/data_set_ALL_AML_train.csv")
test = pd.read_csv("data/raw/data_set_ALL_AML_independent.csv")
labels = pd.read_csv("data/raw/actual.csv")

# Transpose: genes as columns, samples as rows
train_t = train.set_index("Gene Description").T
test_t = test.set_index("Gene Description").T

# Merge labels
train_t["label"] = labels.iloc[:len(train_t), 1].values
test_t["label"] = labels.iloc[len(train_t):, 1].values

# Encode labels
label_map = {"ALL": 0, "AML": 1}
train_t["label"] = train_t["label"].map(label_map)
test_t["label"] = test_t["label"].map(label_map)

# SQLite DB
conn = sqlite3.connect("leukemia.db")

train_t.reset_index().to_sql("train_data", conn, if_exists="replace", index=False)
test_t.reset_index().to_sql("test_data", conn, if_exists="replace", index=False)

print("Training shape:", train_t.shape)
print("Test shape:", test_t.shape)
