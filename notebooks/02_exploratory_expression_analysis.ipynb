import pandas as pd
import sqlite3
import matplotlib.pyplot as plt

conn = sqlite3.connect("leukemia.db")
df = pd.read_sql("SELECT * FROM train_data", conn)

X = df.drop(columns=["index", "label"])
y = df["label"]

# Gene variance
gene_var = X.var().sort_values(ascending=False)

plt.hist(gene_var, bins=100)
plt.title("Gene Variance Distribution")
plt.show()

# Class balance
y.value_counts().plot(kind="bar", title="Class Distribution")
plt.show()
